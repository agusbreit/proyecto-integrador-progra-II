<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%-include('./partials/head.ejs', {titulo:'Resultado de busqueda - The Fantasy'})%>

<body>
	<!-- Header -->
	<%-include('./partials/header.ejs')%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show search products -->
			<% for ( let i=0 ; i < 4; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= productos[i]//.nombre %> ">
						<figure class="product-box_image">
							<img src=<%= productos[i]//.image %> alt="">
						</figure>
						<article class="product-box_data">
							<h2> <%= productos[i]//.nombre %> </h2>
							<p> <%= productos[i]//.descripcion%> </p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>

			<!-- footer -->
			<%-include('./partials/footer.ejs')%>
			<!-- /footer -->

</body>

</html>